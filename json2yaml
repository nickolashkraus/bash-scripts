#!/usr/bin/env bash
#
# DESCRIPTION
#   Convert JSON to YAML.
#
# USAGE
#   json2yaml [OPTIONS] FILE
#
# ARGUMENTS
#   FILE    Path to JSON file
#
# OPTIONS
#   -h, --help    Show this help message
#
# EXAMPLES
#   None

# Colors
red='\033[0;31m'
reset='\033[0m'

# Print usage information.
function usage() {
  echo "usage: json2yaml [OPTIONS] FILE"
  echo ""
  echo "Arguments:"
  echo "  FILE    Path to JSON file"
  echo ""
  echo "Options:"
  echo "  -h, --help    Show this help message"
  echo ""
}

file=""

# Parse command line arguments.
while [[ $# -gt 0 ]]; do
  case $1 in
    -h | --help)
      usage
      exit 0
      ;;
    -*)
      echo "Unknown option: $1" >&2
      usage
      exit 1
      ;;
    *)
      file="$1"
      shift
      break
      ;;
  esac
done

if [ -z "${file}" ]; then
  echo -e "${red}ERROR: Must specify a file.${reset}" >&2
  usage
  exit 1
fi

if [ ! -e "${file}" ]; then
  echo -e "${red}ERROR: ${file} does not exist.${reset}" >&2
  exit 1
fi

filename=$(echo "${file}" | cut -f 1 -d '.')

python_script=$(
  cat <<END
import sys;
import json;
import yaml;

yaml.safe_dump(json.load(sys.stdin), sys.stdout, default_flow_style=False)

END
)

python -c "${python_script}" <"${file}" >"${filename}.yaml"
